<div class="all_books_container">
	<% @books.each do |book| %>
		<div class="single_book_container">
			<img src="<%=book.image%>">
			<ul>
				<li><%=book[:title]%></li>
				<li><%=book[:author]%></li>
				<li><%=book[:published_year]%></li>
				<li><%=book[:description]%></li>
			</ul>
		</div>
	<%end%>
</div>